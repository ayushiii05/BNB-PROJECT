<% layout("/layouts/boilerplate") %>
<body>
    <div class="row offset-2 mt-3 ">
        <div class="col-8">
    <h3>Create a New Listing</h3>

    <form method= "POST" action = "/listings/">
        <div>
        <lable for="title" class="form-label">title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" />
        </div>
    
    <div class="mb-3">
        <lable for="description" class="form-label">description</lable>
    <textarea name="listing[description]" placeholder="enter descrpition" class="form-control" >
         </textarea>

    </div>
    
    <div class="mb-3">
        <lable for="image" class="form-label">image-link</lable>

        <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control"/>
    </div>
    
    <div class="row">
    <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">price</lable>
    <input name="listing[price]" placeholder="12000" type="number" class="form-control" />
    </div>
    
    <div class="mb-3 col-md-8">
        <lable for="location" class="form-label">loaction</lable>
    <input name="listing[location]" placeholder="jaipur,Rajasthan" type="text" class="form-control" />
    </div>
    </div>
    <div class="mb-3">
        <lable for="country" class="form-label">country</lable>
    <input name="listing[country]" placeholder="India" type="text" class="form-control" />
    </div>
    
    <button class="btn btn-dark add-btn mt-3">add</button>
    </form>
    </div>
    </div>
</body>
