<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>edit the list</h3>

    <form method= "POST" action = "/listings/ <%= listing._id %>?_method=PUT">

        <div class="mb-3">
            <lable for="title" class="form-label">title</lable>
        <input name="listing[title]" value= "<%= listing.title %> "type="text" class="form-control"/>
        </div>
   <div>
   <lable for="description" class="form-label">description</lable>
    <textarea name="listing[description]" class="form-control"> <%= listing.description %> </textarea>
    </div>
    <div class="mb-3">
        <lable for="image" class="form-label">image</lable>
    <input name="listing[image]" value= "<%= listing.image %>" type="text" class="form-control"/>
    </div>
<div class="row">
    <div class="mb-3 col-4">
    <lable for="price" class="form-label">price</lable>
     <input name="listing[price]" value="<%=listing.price %>" type="number" class="form-control"/>
    </div>
    <div class="mb-3 col-8">
        <lable for="location" class="form-label">location</lable>
    <input name="listing[location]" value= "<%= listing.location %> "type="text" class="form-control"/>
    </div>
    </div>
    <div class="mb-3">
        <lable for="country" class="form-label">country</lable>
    <input name="listing[country]" value= "<%= listing.country %>" type="text" class="form-control"/>
    </div>
    
    <button class="btn btn-dark edit-btn mt-3">edit</button>
    </form>
</div>
</div>

</body>
